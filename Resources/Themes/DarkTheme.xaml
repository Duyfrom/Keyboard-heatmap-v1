<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Dark Theme Colors -->
    <Color x:Key="PrimaryColor">#2196F3</Color>
    <Color x:Key="AccentColor">#FFC107</Color>
    <Color x:Key="BackgroundColor">#303030</Color>
    <Color x:Key="ForegroundColor">#FFFFFF</Color>
    <Color x:Key="PanelBackgroundColor">#424242</Color>
    <Color x:Key="CardBackgroundColor">#424242</Color>
    <Color x:Key="HeaderBackgroundColor">#212121</Color>
    <Color x:Key="BorderColor">#757575</Color>
    
    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="ForegroundBrush" Color="{StaticResource ForegroundColor}"/>
    <SolidColorBrush x:Key="PanelBackgroundBrush" Color="{StaticResource PanelBackgroundColor}"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBackgroundColor}"/>
    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="{StaticResource HeaderBackgroundColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    
</ResourceDictionary>
