<Window x:Class="KeyboardHeatmapPro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KeyboardHeatmapPro"
        xmlns:views="clr-namespace:KeyboardHeatmapPro.Views"
        xmlns:vm="clr-namespace:KeyboardHeatmapPro.ViewModels"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        mc:Ignorable="d"
        Title="KeyboardHeatmap Pro" 
        Height="800" Width="1200"
        MinHeight="800" MinWidth="1200"
        WindowStartupLocation="CenterScreen"
        >
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        
        <!-- Header Section -->
        <Border Grid.Row="0" Background="{DynamicResource HeaderBackground}" BorderThickness="0,0,0,1" BorderBrush="{DynamicResource BorderBrush}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Logo and Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="10,0">
                    <!-- <Image Source="/Resources/app.ico" Width="32" Height="32" Margin="0,0,10,0"/> -->
                    <TextBlock Text="KeyboardHeatmap Pro" FontSize="24" FontWeight="Bold" VerticalAlignment="Center"/>
                </StackPanel>
                
                <!-- Quick Actions Toolbar -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="10" VerticalAlignment="Center">
                    <ToggleButton x:Name="TrackingToggle" 
                                  IsChecked="{Binding IsTracking}" 
                                  Command="{Binding ToggleTrackingCommand}"
                                  Width="100" Height="35" Margin="5,0"
                                  Style="{DynamicResource TrackingToggleStyle}">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="10" Height="10" Margin="0,0,5,0">
                                <Ellipse.Fill>
                                    <SolidColorBrush Color="{Binding IsTracking, Converter={StaticResource BoolToColorConverter}}" />
                                </Ellipse.Fill>
                            </Ellipse>
                            <TextBlock Text="{Binding IsTracking, Converter={StaticResource BoolToTrackingTextConverter}}" />
                        </StackPanel>
                    </ToggleButton>
                    
                    <Button Command="{Binding ShowSettingsCommand}" Width="35" Height="35" Margin="5,0" ToolTip="Settings">
                        <Path Data="M12,15.5A3.5,3.5 0 0,1 8.5,12A3.5,3.5 0 0,1 12,8.5A3.5,3.5 0 0,1 15.5,12A3.5,3.5 0 0,1 12,15.5M19.43,12.97C19.47,12.65 19.5,12.33 19.5,12C19.5,11.67 19.47,11.34 19.43,11L21.54,9.37C21.73,9.22 21.78,8.95 21.66,8.73L19.66,5.27C19.54,5.05 19.27,4.96 19.05,5.05L16.56,6.05C16.04,5.66 15.5,5.32 14.87,5.07L14.5,2.42C14.46,2.18 14.25,2 14,2H10C9.75,2 9.54,2.18 9.5,2.42L9.13,5.07C8.5,5.32 7.96,5.66 7.44,6.05L4.95,5.05C4.73,4.96 4.46,5.05 4.34,5.27L2.34,8.73C2.21,8.95 2.27,9.22 2.46,9.37L4.57,11C4.53,11.34 4.5,11.67 4.5,12C4.5,12.33 4.53,12.65 4.57,12.97L2.46,14.63C2.27,14.78 2.21,15.05 2.34,15.27L4.34,18.73C4.46,18.95 4.73,19.03 4.95,18.95L7.44,17.94C7.96,18.34 8.5,18.68 9.13,18.93L9.5,21.58C9.54,21.82 9.75,22 10,22H14C14.25,22 14.46,21.82 14.5,21.58L14.87,18.93C15.5,18.67 16.04,18.34 16.56,17.94L19.05,18.95C19.27,19.03 19.54,18.95 19.66,18.73L21.66,15.27C21.78,15.05 21.73,14.78 21.54,14.63L19.43,12.97Z" 
                              Fill="{DynamicResource IconBrush}" Stretch="Uniform" Width="20" Height="20"/>
                    </Button>
                    
                    <Button Command="{Binding ShowAboutCommand}" Width="35" Height="35" Margin="5,0" ToolTip="About">
                        <Path Data="M11,9H13V7H11M12,20C7.59,20 4,16.41 4,12C4,7.59 7.59,4 12,4C16.41,4 20,7.59 20,12C20,16.41 16.41,20 12,20M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M11,17H13V11H11V17Z" 
                              Fill="{DynamicResource IconBrush}" Stretch="Uniform" Width="20" Height="20"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Tab Bar -->
        <TabControl Grid.Row="1" Grid.RowSpan="2" 
                    SelectedIndex="{Binding SelectedTabIndex}"
                    Style="{DynamicResource ModernTabControlStyle}">
            <TabItem Header="Live Heatmap" Style="{DynamicResource ModernTabItemStyle}">
                <views:LiveHeatmapView DataContext="{Binding LiveHeatmapViewModel}"/>
            </TabItem>
            <TabItem Header="Analytics" Style="{DynamicResource ModernTabItemStyle}">
                <views:AnalyticsView DataContext="{Binding AnalyticsViewModel}"/>
            </TabItem>
            <TabItem Header="Timeline" Style="{DynamicResource ModernTabItemStyle}">
                <views:TimelineView DataContext="{Binding TimelineViewModel}"/>
            </TabItem>
            <TabItem Header="Settings" Style="{DynamicResource ModernTabItemStyle}">
                <views:SettingsView DataContext="{Binding SettingsViewModel}"/>
            </TabItem>
            <TabItem Header="Reports" Style="{DynamicResource ModernTabItemStyle}">
                <views:ReportsView DataContext="{Binding ReportsViewModel}"/>
            </TabItem>
        </TabControl>
        
        <!-- Status Bar -->
        <Border Grid.Row="3" Background="{DynamicResource StatusBarBackground}" BorderThickness="0,1,0,0" BorderBrush="{DynamicResource BorderBrush}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="10,0">
                    <Ellipse Width="8" Height="8" Margin="0,0,5,0">
                        <Ellipse.Fill>
                            <SolidColorBrush Color="{Binding IsTracking, Converter={StaticResource BoolToColorConverter}}" />
                        </Ellipse.Fill>
                    </Ellipse>
                    <TextBlock Text="{Binding TrackingStatus}" VerticalAlignment="Center"/>
                </StackPanel>
                
                <Separator Grid.Column="1" Style="{DynamicResource VerticalSeparatorStyle}"/>
                
                <TextBlock Grid.Column="2" Margin="10,0" VerticalAlignment="Center">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="Total keys: {0}">
                            <Binding Path="LiveHeatmapViewModel.TotalKeystrokes"/>
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
                
                <TextBlock Grid.Column="4" Margin="10,0" VerticalAlignment="Center" 
                           Text="{Binding Source={x:Static local:App.Current}, Path=Version}" 
                           Opacity="0.7"/>
            </Grid>
        </Border>
        
        <!-- System Tray Icon - Disabled for now due to missing icon file -->
        <!-- <tb:TaskbarIcon x:Name="TrayIcon"
                        Visibility="Visible"
                        ToolTipText="KeyboardHeatmap Pro"
                        MenuActivation="LeftOrRightClick">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Show" Command="{Binding ShowWindowCommand}" FontWeight="Bold"/>
                    <Separator/>
                    <MenuItem Header="Start Tracking" Command="{Binding StartTrackingCommand}" 
                              IsEnabled="{Binding IsTracking, Converter={StaticResource InverseBooleanConverter}}"/>
                    <MenuItem Header="Stop Tracking" Command="{Binding StopTrackingCommand}" 
                              IsEnabled="{Binding IsTracking}"/>
                    <Separator/>
                    <MenuItem Header="Settings" Command="{Binding ShowSettingsCommand}"/>
                    <Separator/>
                    <MenuItem Header="Exit" Command="{Binding ExitCommand}"/>
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon> -->
    </Grid>
</Window>
