<UserControl x:Class="KeyboardHeatmapPro.Views.ReportsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40,20" MaxWidth="800">
                <TextBlock Text="Report Generator" FontSize="28" FontWeight="Bold" Margin="0,0,0,20"/>
                
                <!-- Report Configuration -->
                <GroupBox Header="Report Configuration" Margin="0,0,0,20">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Report Type:" 
                                   VerticalAlignment="Center" Margin="0,5"/>
                        <ComboBox Grid.Row="0" Grid.Column="1" 
                                  ItemsSource="{Binding ReportTypes}" 
                                  SelectedItem="{Binding SelectedReportType}" 
                                  Margin="0,5"/>
                        
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Date Range:" 
                                   VerticalAlignment="Center" Margin="0,5"/>
                        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="0,5">
                            <DatePicker SelectedDate="{Binding StartDate}" Width="120"/>
                            <TextBlock Text=" to " VerticalAlignment="Center" Margin="10,0"/>
                            <DatePicker SelectedDate="{Binding EndDate}" Width="120"/>
                        </StackPanel>
                        
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Include:" 
                                   VerticalAlignment="Top" Margin="0,10,0,0"/>
                        <StackPanel Grid.Row="2" Grid.Column="1" Margin="0,10,0,0">
                            <CheckBox Content="Key usage statistics" IsChecked="True" Margin="0,2"/>
                            <CheckBox Content="Usage timeline charts" IsChecked="True" Margin="0,2"/>
                            <CheckBox Content="Heatmap visualizations" IsChecked="True" Margin="0,2"/>
                            <CheckBox Content="Productivity metrics" IsChecked="True" Margin="0,2"/>
                            <CheckBox Content="Session details" Margin="0,2"/>
                        </StackPanel>
                        
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Format Options:" 
                                   VerticalAlignment="Top" Margin="0,10,0,0"/>
                        <StackPanel Grid.Row="3" Grid.Column="1" Margin="0,10,0,0">
                            <CheckBox Content="Include company branding" Margin="0,2"/>
                            <CheckBox Content="Add executive summary" IsChecked="True" Margin="0,2"/>
                            <CheckBox Content="Include raw data tables" Margin="0,2"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>
                
                <!-- Scheduled Reports -->
                <GroupBox Header="Scheduled Reports" Margin="0,0,0,20">
                    <StackPanel Margin="10">
                        <CheckBox Content="Enable automatic report generation" Margin="0,5"/>
                        <Grid Margin="20,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Frequency:" 
                                       VerticalAlignment="Center" Margin="0,2"/>
                            <ComboBox Grid.Row="0" Grid.Column="1" Width="200" 
                                      HorizontalAlignment="Left" Margin="0,2">
                                <ComboBoxItem>Daily</ComboBoxItem>
                                <ComboBoxItem>Weekly</ComboBoxItem>
                                <ComboBoxItem>Monthly</ComboBoxItem>
                            </ComboBox>
                            
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Time:" 
                                       VerticalAlignment="Center" Margin="0,2"/>
                            <TextBox Grid.Row="1" Grid.Column="1" Text="09:00" 
                                     Width="200" HorizontalAlignment="Left" Margin="0,2"/>
                            
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Send to:" 
                                       VerticalAlignment="Center" Margin="0,2"/>
                            <TextBox Grid.Row="2" Grid.Column="1" 
                                     Text="email@example.com" 
                                     Width="200" HorizontalAlignment="Left" Margin="0,2"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>
                
                <!-- Action Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20">
                    <Button Content="Generate Report" 
                            Command="{Binding GenerateReportCommand}" 
                            Width="150" Height="35" Margin="5"
                            Style="{DynamicResource PrimaryButtonStyle}"/>
                    <Button Content="Preview" Width="100" Height="35" Margin="5"/>
                </StackPanel>
                
                <!-- Export Options -->
                <Border Background="{DynamicResource PanelBackgroundBrush}" 
                        CornerRadius="5" Padding="20" Margin="0,20,0,0">
                    <StackPanel>
                        <TextBlock Text="Export Options" FontWeight="Bold" Margin="0,0,0,10"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="ðŸ“„ Export to PDF" Width="140" Margin="5"/>
                            <Button Content="ðŸŒ Export to HTML" Width="140" Margin="5"/>
                            <Button Content="ðŸ“Š Export to Excel" Width="140" Margin="5"/>
                            <Button Content="ðŸ“‹ Export to CSV" Width="140" Margin="5"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- Recent Reports -->
                <TextBlock Text="Recent Reports" FontSize="18" FontWeight="Bold" Margin="0,30,0,10"/>
                <DataGrid Height="200" AutoGenerateColumns="False" CanUserAddRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Report Name" Width="*"/>
                        <DataGridTextColumn Header="Type" Width="100"/>
                        <DataGridTextColumn Header="Generated" Width="150"/>
                        <DataGridTextColumn Header="Size" Width="80"/>
                        <DataGridTemplateColumn Header="Actions" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="View" Margin="2" Padding="5,2"/>
                                        <Button Content="Delete" Margin="2" Padding="5,2"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Loading Overlay -->
        <Border Background="#80000000" 
                Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="20"/>
                <TextBlock Text="Generating report..." Foreground="White" 
                         HorizontalAlignment="Center" Margin="0,10,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
