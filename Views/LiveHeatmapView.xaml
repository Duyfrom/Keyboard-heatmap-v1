<UserControl x:Class="KeyboardHeatmapPro.Views.LiveHeatmapView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>
        
        <!-- Keyboard Visualization Panel -->
        <Border Grid.Column="0" Background="{DynamicResource BackgroundBrush}" 
                CornerRadius="5" Margin="5" Padding="20">
            <Viewbox Stretch="Uniform">
                <ItemsControl ItemsSource="{Binding Keys}" Width="900" Height="350">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Width="{Binding Width}" Height="{Binding Height}" 
                                    Background="{Binding Background}" 
                                    BorderBrush="{DynamicResource KeyBorderBrush}" 
                                    BorderThickness="1"
                                    CornerRadius="4">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="2" BlurRadius="2" Opacity="0.3"/>
                                </Border.Effect>
                                <TextBlock Text="{Binding Label}" 
                                         VerticalAlignment="Center" 
                                         HorizontalAlignment="Center" 
                                         Foreground="{Binding Foreground}"
                                         FontSize="11" FontFamily="Segoe UI"/>
                                <Border.ToolTip>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Label}" FontWeight="Bold"/>
                                        <TextBlock>
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="Press Count: {0}">
                                                    <Binding Path="PressCount"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                        <TextBlock>
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="Heat Level: {0}/10">
                                                    <Binding Path="HeatLevel"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </StackPanel>
                                </Border.ToolTip>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    <ItemsControl.ItemContainerStyle>
                        <Style>
                            <Setter Property="Canvas.Left" Value="{Binding X}"/>
                            <Setter Property="Canvas.Top" Value="{Binding Y}"/>
                        </Style>
                    </ItemsControl.ItemContainerStyle>
                </ItemsControl>
            </Viewbox>
        </Border>
        
        <!-- Control Panel (Right Sidebar) -->
        <Border Grid.Column="1" Background="{DynamicResource PanelBackgroundBrush}" 
                CornerRadius="5" Margin="5" Padding="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Session Timer -->
                    <Border Background="{DynamicResource AccentBrush}" CornerRadius="5" Padding="10" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="Session Timer" FontWeight="Bold" FontSize="14" Foreground="White" Margin="0,0,0,5"/>
                            <TextBlock FontSize="24" FontWeight="Light" Foreground="White" HorizontalAlignment="Center">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}{0:hh\\:mm\\:ss}">
                                        <Binding Path="SessionDuration"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                    
                    <!-- Metrics -->
                    <GroupBox Header="Real-time Metrics" Margin="0,0,0,10">
                        <Grid Margin="5">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Total Keystrokes:" Margin="0,2"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding TotalKeystrokes}" 
                                     FontWeight="Bold" HorizontalAlignment="Right" Margin="0,2"/>
                            
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Keys per Minute:" Margin="0,2"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding KeysPerMinute, StringFormat=N1}" 
                                     FontWeight="Bold" HorizontalAlignment="Right" Margin="0,2"/>
                            
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Words per Minute:" Margin="0,2"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding WordsPerMinute, StringFormat=N1}" 
                                     FontWeight="Bold" HorizontalAlignment="Right" Margin="0,2"/>
                        </Grid>
                    </GroupBox>
                    
                    <!-- Intensity Controls -->
                    <GroupBox Header="Intensity Controls" Margin="0,0,0,10">
                        <StackPanel Margin="5">
                            <TextBlock Text="Sensitivity Level" Margin="0,0,0,5"/>
                            <Grid>
                                <Slider Minimum="1" Maximum="10" Value="{Binding SensitivityLevel}" 
                                      TickPlacement="BottomRight" TickFrequency="1" IsSnapToTickEnabled="True"/>
                                <TextBlock Text="{Binding SensitivityLevel}" HorizontalAlignment="Right" 
                                         VerticalAlignment="Top" Margin="0,-20,0,0" FontWeight="Bold"/>
                            </Grid>
                            
                            <TextBlock Text="Decay Rate" Margin="0,10,0,5"/>
                            <Grid>
                                <Slider Minimum="0.1" Maximum="2.0" Value="{Binding DecayRate}" 
                                      TickPlacement="BottomRight" TickFrequency="0.1"/>
                                <TextBlock Text="{Binding DecayRate, StringFormat=N1}" HorizontalAlignment="Right" 
                                         VerticalAlignment="Top" Margin="0,-20,0,0" FontWeight="Bold"/>
                            </Grid>
                            
                            <TextBlock Text="Color Scheme" Margin="0,10,0,5"/>
                            <ComboBox ItemsSource="{Binding ColorSchemes}" SelectedItem="{Binding ColorScheme}"/>
                        </StackPanel>
                    </GroupBox>
                    
                    <!-- Filter Options -->
                    <GroupBox Header="Filter Options" Margin="0,0,0,10">
                        <StackPanel Margin="5">
                            <CheckBox Content="Show Letters" IsChecked="{Binding ShowLetters}" Margin="0,2"/>
                            <CheckBox Content="Show Numbers" IsChecked="{Binding ShowNumbers}" Margin="0,2"/>
                            <CheckBox Content="Show Symbols" IsChecked="{Binding ShowSymbols}" Margin="0,2"/>
                            <CheckBox Content="Show Function Keys" IsChecked="{Binding ShowFunctionKeys}" Margin="0,2"/>
                        </StackPanel>
                    </GroupBox>
                    
                    <!-- Actions -->
                    <StackPanel>
                        <Button Content="Reset Heatmap" Command="{Binding ResetHeatmapCommand}" 
                              Height="35" Margin="0,5" Style="{DynamicResource PrimaryButtonStyle}"/>
                        <Button Content="Export Heatmap" Command="{Binding ExportHeatmapCommand}" 
                              Height="35" Margin="0,5"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>

